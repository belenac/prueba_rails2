<div class="container seccion">
  <%= form_with model: @status, url: todo_status_path, local: true do |f| %>
    <div class="form-group form-check">
      <%= f.check_box :status, class:'form-check-input' %>
      <%= f.label :status, 'Estado tarea', class:'form-check-label' %>
    </div>
    <%= f.submit "Enviar", class:'btn btn-outline-primary' %>
  <% end %>
</div>